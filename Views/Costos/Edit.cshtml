@model ServiceMVC.Models.Costo

@{
    //ViewData["Title"] = "Editar";
    Layout = null;
}

<h1>Editar</h1>

<h4>Costo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CostoID" />
            <div class="form-group">
                <label asp-for="SolucionID" class="control-label">Solucion</label>
                <select asp-for="SolucionID" class="form-control" asp-items="ViewBag.SolucionID"></select>
                <span asp-validation-for="SolucionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tiempo" class="control-label"></label>
                <input asp-for="Tiempo" class="form-control" />
                <span asp-validation-for="Tiempo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unidades" class="control-label"></label>
                <input asp-for="Unidades" class="form-control" />
                <span asp-validation-for="Unidades" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

