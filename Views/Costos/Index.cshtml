@model IEnumerable<ServiceMVC.Models.Costo>

@{
    ViewData["Title"] = "Costos";
}

<h1>Costos</h1>

<p>
    <a href="#modalPersnalizado" data-id='@Url.ActionLink("Create","Costos")' class="btnLoadModal btn btn-outline-primary" data-toggle="modal" data-target="#modalPersnalizado"><span><i class="bi-plus-circle-fill"></i></span> Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tiempo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solucion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tiempo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Solucion.Descripcion)
            </td>
            <td>
                <a href="#modalPersnalizado" data-id='@Url.ActionLink("Edit","Costos")/@item.CostoID' class="btnLoadModal" data-toggle="modal" data-target="#modalPersnalizado"><i class="bi-pencil-fill text-primary"></i></a> |
                <a href="#modalPersnalizado" data-id='@Url.ActionLink("Details","Costos")/@item.CostoID' class="btnLoadModal" data-toggle="modal" data-target="#modalPersnalizado"><i class="bi-eye-fill text-info"></i></a> |
                <a href="#modalPersnalizado" data-id='@Url.ActionLink("Delete","Costos")/@item.CostoID' class="btnLoadModal" data-toggle="modal" data-target="#modalPersnalizado"><i class="bi-trash-fill text-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_modalview" />