@model ServiceMVC.Models.DiagxSol

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Diagnosticos x Soluciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiagxSolID" />
            <div class="form-group">
                <label asp-for="DiagnosticoID" class="control-label"></label>
                <select asp-for="DiagnosticoID" class="form-control" asp-items="ViewBag.DiagnosticoID"></select>
                <span asp-validation-for="DiagnosticoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SolucionID" class="control-label"></label>
                <select asp-for="SolucionID" class="form-control" asp-items="ViewBag.SolucionID"></select>
                <span asp-validation-for="SolucionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
