@model ServiceMVC.Models.ProbDiagSol

@{
    Layout = "ModalLayout";
}

<h4>Agregar Problema</h4>
<hr />

<p>Si el Diagnostico no existe agrega uno nuevo</p>
<div class="row">
    <div class="col-md-4">
        <form id="AgregarDiag" asp-action="AgregarDiag" asp-controller="ProbDiagSoles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServicioID" value="@ViewBag.ServicioID" />
            <div class="form-group">
                <label asp-for="ProblemaID" class="control-label">Problema</label>
                <select asp-for="ProblemaID" class="form-control" asp-items="ViewBag.ProblemaID"></select>
            </div>
            <div class="form-group">
                <label for="Descripcion" class="control-label">Descripcion del Diagnostico</label>
                <input type="text" form="AgregarDiag" id="Descripcion" name="Descripcion" class="form-control" />
            </div>
            <div class="form-group">
                <input form="AgregarDiag" type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<p>O elige uno existente</p>
<div class="row">
    <div class="col-md-4">
        <form id="Agregar" asp-action="VincularDiag" asp-controller="ProbDiagSoles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServicioID" value="@ViewBag.ServicioID" />
            <div class="form-group">
                <label asp-for="ProblemaID" class="control-label">Problema</label>
                <select asp-for="ProblemaID" class="form-control" asp-items="ViewBag.ProblemaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DiagnosticoID" class="control-label">Diagnostico</label>
                <select asp-for="DiagnosticoID" class="form-control" asp-items="ViewBag.DiagnosticoID"></select>
            </div>
            <div class="form-group">
                <input form="Agregar" type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/ProbxDiagCMB.js"></script>
}