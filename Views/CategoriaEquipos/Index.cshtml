@model IEnumerable<ServiceMVC.Models.CategoriaEquipo>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaEquipoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaEquipoID">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaEquipoID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
